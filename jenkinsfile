pipeline{

    agent any

    stages{

        stage("Fetch app from github"){
            steps{
                git branch: 'master', url: 'https://github.com/malickhtwt/flask_redis_celery_docker.git'
            }
         }

        stage("Test code with sonarqube"){
            steps{
                sh 'docker-compose up' 
            }
        }

        stage("Generate the coverage reports"){
            steps{
                sh 'docker-compose exec api py.test --cov-report xml --cov ../flask-redis_celery_docker -v'
            }
        }

        stage("Sonar Analysis"){

            environment{
                scannerHome = tool 'sonar4.7'
            }
            steps{
                withSonarQubeEnv("sonar"){
                    sh ''' ${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=Sonarqube-flask \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://192.168.56.100:9000 \
                    -Dsonar.login=25c578bb04c32454e9630de71b7930f4c127ad3f
                    -Dsonar.python.coverage.reportPaths=coverage.xml
                    '''
                }
            }
             
        }
    }
}